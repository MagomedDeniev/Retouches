{% block body %}

    <div class="md-responsive-image" style="background-image: url('{{ asset('assets/images/dressmaker.jpg') }}')">

        <div class="md-image-darker" style="opacity: 0.4"></div>

        <div class="md-text">
            <h1>Service de couturier à Nice</h1>
            <div class="md-lined-title md-homme-femme">
